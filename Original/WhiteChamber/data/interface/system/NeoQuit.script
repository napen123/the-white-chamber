#include "scripts\base.inc"
#include "scripts\keys.inc"

self.xResult = false;


////////////////////////////////////////////////////////////////////////////////
on "close"
{
  self.Close();
}


////////////////////////////////////////////////////////////////////////////////
on "yes"
{
  self.xResult = true;
  self.Close();
}


////////////////////////////////////////////////////////////////////////////////
on "Keypress"
{
  var button;

  if(Keyboard.KeyCode==VK_ESCAPE)
  {
    self.Close();
  }
  else if(Keyboard.KeyCode==VK_RETURN)
  {
    self.xResult = true;
    self.Close();
  }
}
